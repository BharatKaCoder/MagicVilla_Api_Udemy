@model MagicVillaUdemy_Web.Models.DTO.VillaUpdateDTO

@{
    ViewData["Title"] = "Update Villa";
}

<div class="container p-4 border">
    <form asp-action="UpdateVilla">
        <h3 class="text-primary text-center pb-2">Update existing villa</h3>
        <hr />
        <input hidden asp-for="Id" />
        <div class="mb-3 row align-items-center">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row align-items-center">
            <label asp-for="Rate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Rate" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row align-items-center">
            <label asp-for="SqFt" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="SqFt" type="number" class="form-control" />
                <span asp-validation-for="SqFt" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row align-items-center">
            <label asp-for="Description" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row align-items-center">
            <label asp-for="ImageUrl" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ImageUrl" type="url" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row align-items-center">
            <label asp-for="Amenity" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="Amenity" class="form-control"></textarea>
                <span asp-validation-for="Amenity" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <div class="col-sm-10 offset-sm-2">
                <!-- Offset to align with labels -->
                <button type="submit" value="Update" class="btn btn-success">Update Villa</button>
                <a href="@Url.Action("IndexVilla", "Villa")" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model MagicVillaUdemy_Web.Models.DTO.VillaDTO

@{
    ViewData["Title"] = "Delete Villa";
}

<div class="container p-4 border">
    <form asp-action="DeleteVilla">
        <h3 class="text-primary text-center pb-2">Delete existing villa</h3>
        <hr />
        <input hidden asp-for="Id" />
        <div class="mb-3 row align-items-center">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" disabled class="form-control" />
            </div>
        </div>

        <div class="mb-3 row align-items-center">
            <label asp-for="Rate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Rate" disabled type="number" step="0.01" class="form-control" />
            </div>
        </div>

        <div class="mb-3 row align-items-center">
            <label asp-for="SqFt" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="SqFt" disabled type="number" class="form-control" />
            </div>
        </div>

        <div class="mb-3 row align-items-center">
            <label asp-for="Description" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="Description" disabled class="form-control"></textarea>
            </div>
        </div>

        <div class="mb-3 row align-items-center">
            <label asp-for="ImageUrl" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ImageUrl" disabled type="url" class="form-control" />
            </div>
        </div>

        <div class="mb-3 row align-items-center">
            <label asp-for="Amenity" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="Amenity" disabled class="form-control"></textarea>
            </div>
        </div>

        <div class="mb-3 row">
            <div class="col-sm-10 offset-sm-2">
                <!-- Offset to align with labels -->
                <button type="submit" value="Delete" class="btn btn-danger">Delete Villa</button>
                <a href="@Url.Action("IndexVilla", "Villa")" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
